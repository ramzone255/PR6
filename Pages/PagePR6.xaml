<Page x:Class="WpfAppPractwork1.Pages.PagePR6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPractwork1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePR6">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox Margin="10"
                 Name="lstInput">
            
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Список из файла"
                    Name="btnListFormFile"
                    Click="btnListFormFile_Click"
                    Height="40"
                    Width="120"
                    Margin="0,0,10,0"/>
            <Button Content="Результат"
                    Name="btnRezult"
                    Click="btnRezult_Click"
                    Height="40"
                    Width="120"/>
            <TextBlock Name="txbRezult"
                       Width="200"
                       Height="40"
                       Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
